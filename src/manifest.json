{
    "manifest_version": 3,
    "name": "AdFriend",
    "version": "1.0.0",
    "description": "AdFriend is a Chrome extension that intercepts and replaces ad elements on web pages with customizable, positive content widgets.",
    "options_page": "pages/options.html",
    "background": {
        "service_worker": "js/background.bundle.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "action": {
        "default_popup": "pages/popup.html",
        "default_icon": "assets/images/icon-64.png"
    },
    "chrome_url_overrides": {
        "newtab": "pages/newtab.html"
    },
    "icons": {
        "64": "assets/images/icon-64.png",
        "96": "assets/images/icon-96.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*",
                "<all_urls>"
            ],
            "js": [
                "js/contentScript.bundle.js"
            ],
            "css": [
                "assets/styles/content.styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "devtools_page": "pages/devtools.html",
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://securepubads.g.doubleclick.net https://*.yahoo.com;",
        "content_scripts": "script-src 'self' 'unsafe-inline' https://trustedsource.com https://cdn.jsdelivr.net; object-src 'none';"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/styles/*",
                "assets/images/*",
                "assets/filters/*",
                "js/*.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
